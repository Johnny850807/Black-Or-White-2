    	walkDown: 5
    	halt: 0
    </transitions>
    <body>
		x: 3 y: 4 w: 69 h: 54
    </body>
    <move>
        moveX: $speed
    </move>
    <area>
        w: 75 h: 60
    </area>
</frame>



