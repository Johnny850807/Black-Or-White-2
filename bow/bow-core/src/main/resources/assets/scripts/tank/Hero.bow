<meta> 0
    @include [
    assets/scripts/base.bow
    ]
    <parameters>
        walkDuration : 999
        speed: 4
    </parameters>
</meta>

<galleries> 0
    <sequence>
        startPic: 0 endPic: 3
        path: assets/pics/hero
    </sequence>
</galleries>

<frame> 0 haltRight
duration: $walkDuration next: 0 pic: 0 layer: $characterLayer
    <transitions>
     	walkLeft: 7
     	walkRight: 1
     	walkUp: 3
     	walkDown: 5
    </transitions>
    <body>
		x: 3 y: 4 w: 69 h: 54
    </body>
    <area>
        w: 75 h: 60
    </area>
</frame>

